generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // Direct connection for migrations (port 5432)
}

enum Role {
  OWNER
  TRAINER
  ADMIN
}

enum HorseStatus {
  RACING
  STALLION
  MARE
  RETIRED
  DEAD
}

enum ExpenseCategory {
  AYLIK_HIPODROM_GIDERLERI
  YARIS_KAYIT_DECLARE
  YEM_SAMAN_OT_TALAS
  ILAC
  SEYIS
  SIGORTA
  MONT
  IDMAN_JOKEYI
  NAL_NALBANT
  SARAC
  NAKLIYE
  SEZONLUK_AHIR
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  role         Role     @default(OWNER)
  lastLoginAt  DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  ownerProfile   OwnerProfile?
  trainerProfile TrainerProfile?
  expenses       Expense[]
  notes          HorseNote[]
  illnesses      HorseIllness[]
  illnessOperations HorseIllnessOperation[]
  bannedMedicines HorseBannedMedicine[]
  trainingPlans  HorseTrainingPlan[]
  
  accounts Account[]
  sessions Session[]

  @@index([email])
  @@map("users")
}

model OwnerProfile {
  id           String   @id @default(cuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  officialName String
  officialRef  String?
  
  subscriptionStatus    String?
  subscriptionExpiresAt DateTime?
  stripeCustomerId      String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  stablemate Stablemate?

  @@index([userId])
  @@map("owner_profiles")
}

model TrainerProfile {
  id       String @id @default(cuid())
  userId   String @unique
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  tjkTrainerId String?
  fullName String
  phone    String?
  
  notifyHorseRegistered Boolean @default(true)
  notifyHorseDeclared   Boolean @default(true)
  notifyNewTraining     Boolean @default(true)
  notifyNewExpense      Boolean @default(true)
  notifyNewNote         Boolean @default(true)
  notifyNewRace         Boolean @default(true)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  horses Horse[]
  stablemateLinks StablemateTrainer[]
  notificationQueue NotificationQueue[]

  @@index([userId])
  @@index([tjkTrainerId])
  @@index([fullName])
  @@map("trainer_profiles")
}

model Stablemate {
  id             String @id @default(cuid())
  ownerId        String @unique
  owner          OwnerProfile @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  
  name           String
  foundationYear Int?
  coOwners       String[]
  location       String?
  website        String?
  notifyHorseRegistered Boolean @default(true)
  notifyHorseDeclared   Boolean @default(true)
  notifyNewTraining     Boolean @default(true)
  notifyNewExpense      Boolean @default(true)
  notifyNewNote         Boolean @default(true)
  notifyNewRace         Boolean @default(true)
  
  // Data fetch status: PENDING, IN_PROGRESS, COMPLETED, FAILED
  dataFetchStatus String? @default("PENDING")
  dataFetchStartedAt DateTime?
  dataFetchCompletedAt DateTime?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  horses Horse[]
  trainers StablemateTrainer[]
  notificationQueue NotificationQueue[]

  @@index([ownerId])
  @@map("stablemates")
}

model StablemateTrainer {
  id             String   @id @default(cuid())
  stablemateId   String
  stablemate     Stablemate @relation(fields: [stablemateId], references: [id], onDelete: Cascade)
  
  trainerProfileId String?
  trainerProfile   TrainerProfile? @relation(fields: [trainerProfileId], references: [id])
  
  trainerName     String
  trainerExternalId String?
  trainerPhone    String?
  notes           String?
  isActive        Boolean @default(true)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([stablemateId])
  @@index([trainerProfileId])
  @@index([trainerExternalId])
  @@map("stablemate_trainers")
}

model Racecourse {
  id   String @id @default(cuid())
  name String @unique
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  horses Horse[]
  locationHistory HorseLocationHistory[]
  trainingPlans HorseTrainingPlan[]

  @@map("racecourses")
}

model Farm {
  id   String  @id @default(cuid())
  name String  @unique
  city String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  horses Horse[]
  locationHistory HorseLocationHistory[]

  @@map("farms")
}

model Horse {
  id           String      @id @default(cuid())
  stablemateId String
  stablemate   Stablemate  @relation(fields: [stablemateId], references: [id], onDelete: Cascade)
  
  name         String
  yob          Int?
  status       HorseStatus @default(RACING)
  gender       String?    // Cinsiyet: Erkek, Dişi, etc.
  
  racecourseId String?
  racecourse   Racecourse? @relation(fields: [racecourseId], references: [id])
  
  farmId       String?
  farm         Farm?       @relation(fields: [farmId], references: [id])
  
  trainerId    String?
  trainer      TrainerProfile? @relation(fields: [trainerId], references: [id])
  
  groomName    String?
  stableLabel  String?
  
  externalRef  String?
  
  // Detailed horse data from TJK
  handicapPoints Int?        // Handikap Puanı
  totalEarnings  Decimal?    @db.Decimal(12, 2) // Toplam Kazanç
  prizeMoney     Decimal?    @db.Decimal(12, 2) // İkramiye
  ownerPremium   Decimal?    @db.Decimal(12, 2) // At Sahibi Primi
  breederPremium Decimal?    @db.Decimal(12, 2) // Yetiştiricilik Primi
  totalRaces     Int?        // Toplam Koşu Sayısı
  firstPlaces    Int?        // 1'incilik
  secondPlaces   Int?        // 2'ncilik
  thirdPlaces    Int?        // 3'üncülük
  fourthPlaces   Int?        // 4'ncülük
  fifthPlaces    Int?        // 5'ncilik
  
  // Pedigree
  sireName       String?     // Baba adı
  damName        String?     // Anne adı
  sireSire       String?     // Baba'nın babası
  sireDam        String?     // Baba'nın annesi
  damSire        String?     // Anne'nin babası
  damDam         String?     // Anne'nin annesi
  
  // Extended Pedigree (4th generation - great-grandparents)
  sireSireSire   String?     // Baba'nın baba'sının babası
  sireSireDam    String?     // Baba'nın baba'sının annesi
  sireDamSire    String?     // Baba'nın anne'sinin babası
  sireDamDam     String?     // Baba'nın anne'sinin annesi
  damSireSire    String?     // Anne'nin baba'sının babası
  damSireDam     String?     // Anne'nin baba'sının annesi
  damDamSire     String?     // Anne'nin anne'sinin babası
  damDamDam      String?     // Anne'nin anne'sinin annesi
  
  // Statistics by surface
  turfRaces      Int?
  turfFirsts     Int?
  turfEarnings   Decimal?    @db.Decimal(12, 2)
  dirtRaces      Int?
  dirtFirsts     Int?
  dirtEarnings   Decimal?    @db.Decimal(12, 2)
  syntheticRaces Int?
  syntheticFirsts Int?
  syntheticEarnings Decimal? @db.Decimal(12, 2)
  
  // Data fetch metadata
  dataFetchedAt  DateTime?   // When detailed data was last fetched
  dataFetchError String?     // Error message if fetch failed
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  expenses Expense[]
  locationHistory HorseLocationHistory[]
  raceHistory HorseRaceHistory[]
  registrations HorseRegistration[]
  gallops HorseGallop[]
  notes HorseNote[]
  illnesses HorseIllness[]
  bannedMedicines HorseBannedMedicine[]
  trainingPlans HorseTrainingPlan[]
  notificationQueue NotificationQueue[]

  @@index([stablemateId])
  @@index([trainerId])
  @@index([racecourseId])
  @@index([farmId])
  @@index([status])
  @@index([externalRef])
  @@map("horses")
}

model HorseRaceHistory {
  id          String   @id @default(cuid())
  horseId     String
  horse       Horse    @relation(fields: [horseId], references: [id], onDelete: Cascade)
  
  raceDate    DateTime
  city        String?  // Şehir (İstanbul, Ankara, etc.)
  distance    Int?     // Mesafe (meters)
  surface     String?  // Pist (Çim, Kum, Sentetik)
  surfaceType String?  // Ç:Normal, etc.
  position    Int?     // S (position: 1, 2, 3, etc.)
  derece      String?  // Derece (time elapsed, e.g., "2.34.13")
  weight      Decimal? @db.Decimal(5, 2) // Sıklet
  jockeyName  String?
  jockeyId    String?
  raceNumber  Int?     // Koşu No
  raceName    String?  // Koşu Adı
  raceType    String?  // Kcins (Maiden, Şartlı, etc.)
  trainerName String?
  trainerId   String?
  handicapPoints Int?  // HP
  prizeMoney  Decimal? @db.Decimal(12, 2) // İkramiye
  videoUrl    String?  // Video link
  photoUrl    String?  // Foto link
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([horseId])
  @@index([raceDate])
  @@index([horseId, raceDate(sort: Desc)]) // Composite index for common query pattern
  @@map("horse_race_history")
}

model HorseRegistration {
  id          String   @id @default(cuid())
  horseId     String
  horse       Horse    @relation(fields: [horseId], references: [id], onDelete: Cascade)
  
  raceDate    DateTime
  city        String?  // Şehir (İstanbul, Ankara, etc.)
  distance    Int?     // Mesafe (meters)
  surface     String?  // Pist (Çim, Kum, Sentetik)
  surfaceType String?  // Ç:Normal, etc.
  raceType    String?  // Kcins (Maiden, Şartlı, etc.)
  type        String   // "Kayıt" or "Deklare"
  jockeyName  String?  // Jockey name (for declarations)
  jockeyId    String?  // Jockey ID
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([horseId])
  @@index([raceDate])
  @@index([horseId, raceDate(sort: Asc)]) // Composite index for common query pattern
  @@map("horse_registrations")
}

model HorseGallop {
  id          String   @id @default(cuid())
  horseId     String
  horse       Horse    @relation(fields: [horseId], references: [id], onDelete: Cascade)
  
  gallopDate  DateTime
  status      String?  // Durum
  racecourse  String?  // İ. Hip. (Training Racecourse - city name)
  surface     String?  // Pist (Surface)
  jockeyName  String?  // İ. Jokeyi (Training Jockey)
  
  // Store distances as JSON: { "1400": "1.02.20", "400": "0.38.50" }
  distances   Json     // { [distance: number]: string }
  
  note        String?  // İdman Notu
  photoUrl    String?  // Photo URL(s) - can be JSON array or single string
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([horseId])
  @@index([gallopDate])
  @@index([horseId, gallopDate(sort: Desc)]) // Composite index for common query pattern
  @@map("horse_gallops")
}

model HorseLocationHistory {
  id          String   @id @default(cuid())
  horseId     String
  horse       Horse    @relation(fields: [horseId], references: [id], onDelete: Cascade)
  
  locationType String  // 'racecourse' or 'farm'
  city         String  // City name (e.g., 'İstanbul Veliefendi', 'Adana Yeşiloba', etc.)
  
  racecourseId String?
  racecourse   Racecourse? @relation(fields: [racecourseId], references: [id])
  
  farmId       String?
  farm         Farm?       @relation(fields: [farmId], references: [id])
  
  startDate   DateTime @default(now())
  endDate     DateTime? // null means current location
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([horseId])
  @@index([racecourseId])
  @@index([farmId])
  @@index([locationType])
  @@map("horse_location_history")
}

model Expense {
  id         String          @id @default(cuid())
  horseId    String?
  horse      Horse?          @relation(fields: [horseId], references: [id], onDelete: Cascade)
  
  addedById  String
  addedBy    User            @relation(fields: [addedById], references: [id], onDelete: Cascade)
  
  date       DateTime
  category   ExpenseCategory
  customName String?
  
  amount     Decimal         @db.Decimal(12, 2)
  currency   String          @default("TRY")
  
  note       String?
  photoUrl   String?
  
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt

  @@index([horseId])
  @@index([addedById])
  @@index([date])
  @@index([category])
  @@index([horseId, createdAt(sort: Desc)]) // Composite index for recent expenses queries
  @@map("expenses")
}

model HorseNote {
  id         String   @id @default(cuid())
  horseId    String
  horse      Horse    @relation(fields: [horseId], references: [id], onDelete: Cascade)
  
  addedById  String
  addedBy    User     @relation(fields: [addedById], references: [id], onDelete: Cascade)
  
  date       DateTime
  note       String
  photoUrl   String?
  kiloValue  Float?
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([horseId])
  @@index([addedById])
  @@index([date])
  @@map("horse_notes")
}

model HorseIllness {
  id         String   @id @default(cuid())
  horseId    String
  horse      Horse    @relation(fields: [horseId], references: [id], onDelete: Cascade)
  
  addedById  String
  addedBy    User     @relation(fields: [addedById], references: [id], onDelete: Cascade)
  
  startDate  DateTime
  endDate    DateTime?
  detail     String?
  photoUrl   String?
  
  operations HorseIllnessOperation[]
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([horseId])
  @@index([addedById])
  @@index([startDate])
  @@map("horse_illnesses")
}

model HorseIllnessOperation {
  id         String   @id @default(cuid())
  illnessId  String
  illness    HorseIllness @relation(fields: [illnessId], references: [id], onDelete: Cascade)
  
  addedById  String
  addedBy    User     @relation(fields: [addedById], references: [id], onDelete: Cascade)
  
  date       DateTime
  description String?
  photoUrl   String?
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([illnessId])
  @@index([addedById])
  @@index([date])
  @@map("horse_illness_operations")
}

model HorseBannedMedicine {
  id          String   @id @default(cuid())
  horseId     String
  horse       Horse    @relation(fields: [horseId], references: [id], onDelete: Cascade)
  
  medicineName String  // İlaç adı/tipi
  givenDate    DateTime // İlaç verilme tarihi
  waitDays     Int     // Yarışa katılmadan önce beklenmesi gereken gün sayısı
  note         String? // Not
  photoUrl     String? // Photo URL(s) - can be JSON array or single string
  
  addedById    String
  addedBy      User    @relation(fields: [addedById], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([horseId])
  @@index([addedById])
  @@index([givenDate])
  @@map("horse_banned_medicines")
}

model HorseTrainingPlan {
  id          String   @id @default(cuid())
  horseId     String
  horse       Horse    @relation(fields: [horseId], references: [id], onDelete: Cascade)
  
  planDate    DateTime // Future date for the training
  distance    String   // Kenter, Tırıs, 200, 400, 600, 800, 1000, 1200, 1400, 1600
  note        String?  // Optional note
  racecourseId String? // Optional racecourse
  racecourse  Racecourse? @relation(fields: [racecourseId], references: [id], onDelete: SetNull)
  
  addedById   String
  addedBy     User     @relation(fields: [addedById], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([horseId])
  @@index([addedById])
  @@index([planDate])
  @@map("horse_training_plans")
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

enum NotificationQueueType {
  horseRegistered
  horseDeclared
  newTraining
  newRace
}

enum NotificationQueueStatus {
  PENDING
  PROCESSING
  SENT
  FAILED
}

model NotificationQueue {
  id           String                  @id @default(cuid())
  type         NotificationQueueType
  horseId      String
  horse        Horse                   @relation(fields: [horseId], references: [id], onDelete: Cascade)
  stablemateId String
  stablemate   Stablemate              @relation(fields: [stablemateId], references: [id], onDelete: Cascade)
  trainerId    String?
  trainer      TrainerProfile?         @relation(fields: [trainerId], references: [id], onDelete: SetNull)
  data         Json                    // Notification-specific data
  status       NotificationQueueStatus  @default(PENDING)
  retryCount   Int                     @default(0)
  error        String?
  createdAt    DateTime                @default(now())
  processedAt  DateTime?

  @@index([status])
  @@index([createdAt])
  @@index([horseId])
  @@index([stablemateId])
  @@map("notification_queue")
}

