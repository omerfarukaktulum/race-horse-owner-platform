generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  OWNER
  TRAINER
  ADMIN
}

enum HorseStatus {
  RACING
  STALLION
  MARE
  RETIRED
  DEAD
}

enum ExpenseCategory {
  IDMAN_JOKEYI
  SEYIS
  ILAC
  YEM_SAMAN_OT
  EKSTRA_ILAC
  YARIS_KAYIT
  NAKLIYE
  SEZONLUK_AHIR
  OZEL
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  role         Role     @default(OWNER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  ownerProfile   OwnerProfile?
  trainerProfile TrainerProfile?
  expenses       Expense[]
  notes          HorseNote[]
  
  accounts Account[]
  sessions Session[]

  @@index([email])
  @@map("users")
}

model OwnerProfile {
  id           String   @id @default(cuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  officialName String
  officialRef  String?
  
  subscriptionStatus    String?
  subscriptionExpiresAt DateTime?
  stripeCustomerId      String?
  
  // Dashboard cache
  racesCache Json?           // Cached race results data
  racesCacheAt DateTime?     // When races cache was last updated
  registrationsCache Json?   // Cached registrations/declarations data
  registrationsCacheAt DateTime? // When registrations cache was last updated
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  stablemate Stablemate?

  @@index([userId])
  @@map("owner_profiles")
}

model TrainerProfile {
  id       String @id @default(cuid())
  userId   String @unique
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  fullName String
  phone    String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  horses Horse[]

  @@index([userId])
  @@index([fullName])
  @@map("trainer_profiles")
}

model Stablemate {
  id             String @id @default(cuid())
  ownerId        String @unique
  owner          OwnerProfile @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  
  name           String
  foundationYear Int?
  coOwners       String[]
  location       String?
  website        String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  horses Horse[]

  @@index([ownerId])
  @@map("stablemates")
}

model Racecourse {
  id   String @id @default(cuid())
  name String @unique
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  horses Horse[]
  locationHistory HorseLocationHistory[]

  @@map("racecourses")
}

model Farm {
  id   String  @id @default(cuid())
  name String  @unique
  city String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  horses Horse[]
  locationHistory HorseLocationHistory[]

  @@map("farms")
}

model Horse {
  id           String      @id @default(cuid())
  stablemateId String
  stablemate   Stablemate  @relation(fields: [stablemateId], references: [id], onDelete: Cascade)
  
  name         String
  yob          Int?
  status       HorseStatus @default(RACING)
  gender       String?    // Cinsiyet: Erkek, Dişi, etc.
  
  racecourseId String?
  racecourse   Racecourse? @relation(fields: [racecourseId], references: [id])
  
  farmId       String?
  farm         Farm?       @relation(fields: [farmId], references: [id])
  
  trainerId    String?
  trainer      TrainerProfile? @relation(fields: [trainerId], references: [id])
  
  groomName    String?
  stableLabel  String?
  
  externalRef  String?
  
  // Detailed horse data from TJK
  handicapPoints Int?        // Handikap Puanı
  totalEarnings  Decimal?    @db.Decimal(12, 2) // Toplam Kazanç
  prizeMoney     Decimal?    @db.Decimal(12, 2) // İkramiye
  ownerPremium   Decimal?    @db.Decimal(12, 2) // At Sahibi Primi
  breederPremium Decimal?    @db.Decimal(12, 2) // Yetiştiricilik Primi
  totalRaces     Int?        // Toplam Koşu Sayısı
  firstPlaces    Int?        // 1'incilik
  secondPlaces   Int?        // 2'ncilik
  thirdPlaces    Int?        // 3'üncülük
  fourthPlaces   Int?        // 4'ncülük
  fifthPlaces    Int?        // 5'ncilik
  
  // Pedigree
  sireName       String?     // Baba adı
  damName        String?     // Anne adı
  sireSire       String?     // Baba'nın babası
  sireDam        String?     // Baba'nın annesi
  damSire        String?     // Anne'nin babası
  damDam         String?     // Anne'nin annesi
  
  // Statistics by surface
  turfRaces      Int?
  turfFirsts     Int?
  turfEarnings   Decimal?    @db.Decimal(12, 2)
  dirtRaces      Int?
  dirtFirsts     Int?
  dirtEarnings   Decimal?    @db.Decimal(12, 2)
  syntheticRaces Int?
  syntheticFirsts Int?
  syntheticEarnings Decimal? @db.Decimal(12, 2)
  
  // Data fetch metadata
  dataFetchedAt  DateTime?   // When detailed data was last fetched
  dataFetchError String?     // Error message if fetch failed
  
  // Dashboard cache for registrations/declarations
  registrationsCache Json?    // Cached registrations and declarations data
  registrationsCacheAt DateTime? // When registrations cache was last updated
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  expenses Expense[]
  locationHistory HorseLocationHistory[]
  raceHistory HorseRaceHistory[]
  notes HorseNote[]

  @@index([stablemateId])
  @@index([trainerId])
  @@index([racecourseId])
  @@index([farmId])
  @@index([status])
  @@index([externalRef])
  @@map("horses")
}

model HorseRaceHistory {
  id          String   @id @default(cuid())
  horseId     String
  horse       Horse    @relation(fields: [horseId], references: [id], onDelete: Cascade)
  
  raceDate    DateTime
  city        String?  // Şehir (İstanbul, Ankara, etc.)
  distance    Int?     // Mesafe (meters)
  surface     String?  // Pist (Çim, Kum, Sentetik)
  surfaceType String?  // Ç:Normal, etc.
  position    Int?     // Derece (1, 2, 3, etc.)
  weight      Decimal? @db.Decimal(5, 2) // Sıklet
  jockeyName  String?
  jockeyId    String?
  raceNumber  Int?     // Koşu No
  raceName    String?  // Koşu Adı
  raceType    String?  // Kcins (Maiden, Şartlı, etc.)
  trainerName String?
  trainerId   String?
  handicapPoints Int?  // HP
  prizeMoney  Decimal? @db.Decimal(12, 2) // İkramiye
  videoUrl    String?  // Video link
  photoUrl    String?  // Foto link
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([horseId])
  @@index([raceDate])
  @@map("horse_race_history")
}

model HorseLocationHistory {
  id          String   @id @default(cuid())
  horseId     String
  horse       Horse    @relation(fields: [horseId], references: [id], onDelete: Cascade)
  
  locationType String  // 'racecourse' or 'farm'
  city         String  // City name (e.g., 'İstanbul Veliefendi', 'Adana Yeşiloba', etc.)
  
  racecourseId String?
  racecourse   Racecourse? @relation(fields: [racecourseId], references: [id])
  
  farmId       String?
  farm         Farm?       @relation(fields: [farmId], references: [id])
  
  startDate   DateTime @default(now())
  endDate     DateTime? // null means current location
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([horseId])
  @@index([racecourseId])
  @@index([farmId])
  @@index([locationType])
  @@map("horse_location_history")
}

model Expense {
  id         String          @id @default(cuid())
  horseId    String
  horse      Horse           @relation(fields: [horseId], references: [id], onDelete: Cascade)
  
  addedById  String
  addedBy    User            @relation(fields: [addedById], references: [id])
  
  date       DateTime
  category   ExpenseCategory
  customName String?
  
  amount     Decimal         @db.Decimal(12, 2)
  currency   String          @default("TRY")
  
  note       String?
  photoUrl   String?
  
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt

  @@index([horseId])
  @@index([addedById])
  @@index([date])
  @@index([category])
  @@map("expenses")
}

model HorseNote {
  id         String   @id @default(cuid())
  horseId    String
  horse      Horse    @relation(fields: [horseId], references: [id], onDelete: Cascade)
  
  addedById  String
  addedBy    User     @relation(fields: [addedById], references: [id])
  
  date       DateTime
  note       String
  photoUrl   String?
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([horseId])
  @@index([addedById])
  @@index([date])
  @@map("horse_notes")
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

